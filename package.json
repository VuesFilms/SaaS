{
  "name": "film-saas",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "build:web": "npm run build -w packages/web",
    "build:server": "npm run build -w packages/server",
    "start:server": "npm run start -w packages/server",
    "ws": "npm run ws -w packages/server",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "smoke": "bash scripts/smoke.sh",
    "diag:env": "node scripts/diag-env.mjs",
    "diag:all": "node scripts/diag-all.mjs"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^28.0.0",
    "prettier": "^3.3.0",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0"
  }
}
